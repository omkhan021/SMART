# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_PATH=./server/database.sqlite

# Twitter API Configuration
# Get these from https://developer.twitter.com/
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_CLIENT_ID=your_client_id_here
TWITTER_CLIENT_SECRET=your_client_secret_here

# Twitter API Rate Limits (optional - defaults will be used if not set)
TWITTER_RATE_LIMIT_TWEETS=300
TWITTER_RATE_LIMIT_USERS=300
TWITTER_RATE_LIMIT_SEARCH=75
TWITTER_RATE_WINDOW_MS=900000

# OpenAI Configuration (optional - for sentiment analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Analysis Configuration
MAX_COMMENTS_PER_ANALYSIS=100
DEFAULT_MOCK_MODE=false
